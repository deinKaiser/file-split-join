{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "singleQuote": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/.test.ts"]
}
